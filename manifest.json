{
    "manifest_version": 3,
    "name": "Trade Analyzer",
    "version": "1.0",
    "description": "Analyze trade values for fantasy football",
    "action": {
        "default_icon": "icons/trade.png"
    },
    "permissions": [
        "activeTab",
        "webRequest"
    ],
    "host_permissions": [
        "https://*.fantasycalc.com/*"
    ],
    "background": {
        "service_worker": "dist/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.fantasycalc.com/*"
            ],
            "js": [
                "dist/content.js"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }
}