{
    "manifest_version": 3,
    "name": "Trade Analyzer",
    "version": "1.0",
    "description": "Analyze trade values for fantasy football",
    "action": {
        "default_popup": "dist/popup.html",
        "default_icon": "icons/trade.png"
    },
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://fantasycalc.com/*"
            ],
            "js": [
                "dist/content.js"
            ]
        }
    ]
}